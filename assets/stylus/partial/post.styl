.post
  width 100%;
  background-color #0000b5;
  color #fff;
  padding 10px 0
  margin-bottom 20px
  .content
    font-size 24px
    ul
      list-style none
      padding 0
      margin 20px 20px 40px 40px
      +below(__)
        margin 20px
      li
        padding 0
        margin 0 0 0 60px
        position relative
        word-wrap break-word
        line-height 30px
        &:before
          content ""
          position absolute
          left -90px
          top -5px
          width 80px
          height 80px
          background-repeat no-repeat
          background-size contain
          background-image url(/images/old/micro1.gif)

        +below(__)
          margin 0
          &:before
            background-image none !important

  &:nth-child(2n) .content ul li
    &:before
      left -80px
      width 60px
      height 60px
      background-image url(/images/old/computer.gif)
