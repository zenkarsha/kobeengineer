.author-card
  width 100%;
  background-color #0ff;
  color #000;
  padding 10px 0
  margin-bottom 20px
  height 230px
  overflow hidden
  &:hover
    background-color #00ff00;
  .content
    font-size 24px
    ul
      list-style none
      padding 0
      margin 0
      li
        padding 0
        margin 0
        position relative
        line-height 30px
        .post-content
          color black !important
          font-size 16px

+below(__)
  #author-header h2
    font-size 20px !important
