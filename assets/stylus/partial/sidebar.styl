.sidebar
  width 100%
  height 400px
  background-color #0000b5
  color white
  overflow-x hidden
  overflow-y scroll
  .content
    font-size 16px
    line-height 18px
    ul
      list-style none
      padding 0
      margin 20px 20px 40px 40px
      li
        padding 0
        margin 0 0 20px 40px
        position relative
        word-wrap break-word
        &:before
          content ""
          position absolute
          left -50px
          top 4px
          width 32px
          height 32px
          background-repeat no-repeat
          background-image url(/images/old/computer.png)

